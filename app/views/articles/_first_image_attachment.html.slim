- attachment_id = "attachment_#{image_attachment.id}"
.wrap.th.left
  - if (@moderator_permission || current_user == @user) && current_user
    = link_to attachment_path(image_attachment), method: :delete, data: { confirm: 'Уверены?' } do
      i.fi-x
  = link_to(image_tag(minify_img_path(image_attachment), size: dimension), "#", :title => image_attachment.title_sen_dot, "data-reveal-id" => attachment_id)
.reveal-modal.medium id = attachment_id data-reveal=true align="center" 
  = image_tag(inline_path(image_attachment))
  a.close-reveal-modal
    i.fi-x
