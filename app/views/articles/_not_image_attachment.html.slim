li.thumb
  .wrap
    - if @moderator_permission || current_user == @article.user
      = link_to edit_attachment_path(not_image_attachment) + "?article_id=#{@article.id}" do
        i.fi-refresh[style="right: 20px;"]
      = link_to attachment_path(not_image_attachment) + "?article_id=#{@article.id}", method: :delete, data: { confirm: 'Are you sure?' } do
        i.fi-x
  = link_to attachment_path(not_image_attachment), target: '_blank', title: not_image_attachment.title_sen_dot do
    - case
    - when not_image_attachment.mime_type =~ /pdf/
      = image_tag("application-pdf.png", size: '32x32', class: "left")
    - when not_image_attachment.mime_type =~ /word/
      = image_tag("application-msword.png", size: '32x32', class: "left")
    - when not_image_attachment.mime_type =~ /ms-excel|spreadsheet/
      = image_tag("application-msexcel.png", size: '32x32', class: "left")
    - else
      = image_tag("unknown.png", size: '32x32', class: "left")
    .thumb-title
      = not_image_attachment.title_sen_dot