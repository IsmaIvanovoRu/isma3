<section class=panel>
  <div>
    <%= link_to 'К списку практик', practices_path %>
  </div>
  <div class="right">
    <% if @moderator_permission %>
      <%= link_to edit_practice_path(@practice), title: 'Редактировать' do %>
        <i class="fi-page-edit"></i>
      <% end %>
      <%= link_to @practice, title: 'Удалить', method: :delete, data: { confirm: 'Are you sure?' } do %>
        <i class="fi-x"></i>
      <% end %>
    <% end %>
  </div>
  <h1><%= link_to @practice.name, @practice.attachment, target: 'blank'%></h1>
  <dl>
    <dt>Практика</dt>
    <dd><%= link_to @practice.educational_program.educational_standart ? "#{@practice.educational_program.full_name} (#{@practice.educational_program.educational_standart.level})" : "#{@practice.educational_program.full_name}", @practice.educational_program %></dd>
  </dl>
</section>