<%= form_for @group, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label 'parent_id', :class => 'control-label'  %>
        <div class="controls">
    <%= f.select :parent_id, options_for_select= @groups.collect {|p| [t(p.name, :scope => [:groups]), p.id] }, {:include_blank => ''} %>
    </div>
    </div>
  <div class="control-group">
    <%= f.label :administrator, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :administrator, :class => 'check_box_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :moderator, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :moderator, :class => 'check_box_field' %>
    </div>
  </div>
    <div class="control-group">
    <%= f.label :writer, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :writer, :class => 'check_box_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :reader, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :reader, :class => 'check_box_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                groups_path, :class => 'btn' %>
  </div>
<% end %>
