<div class="row">
  <div class="large-4 large-centered small-12 columns panel">
    <h2>Войти</h2>

    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
      <div><%= f.label :login, 'Имя пользователя' %>
      <%= f.text_field :login, :autofocus => true %></div>

      <div><%= f.label :password, 'Пароль' %>
      <%= f.password_field :password %></div>

      <% if devise_mapping.rememberable? -%>
	<div><%= f.check_box :remember_me %> <%= f.label :remember_me, 'Запомнить' %></div>
      <% end -%>

      <div><%= f.submit "Войти", class: 'button small' %></div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>